CREATE TABLE ck_cloud_environment (ID BIGINT AUTO_INCREMENT NOT NULL, ENV VARCHAR(64), PROPERTIES VARCHAR(255), TENANT VARCHAR(64), PRIMARY KEY (ID))


CREATE TABLE ck_config (ID BIGINT AUTO_INCREMENT NOT NULL, app_name VARCHAR(64) NOT NULL, CONDITION VARCHAR(255), config_id VARCHAR(255), CONTENT TEXT, DELETED VARCHAR(1), ENV VARCHAR(64), OPERATOR VARCHAR(64), TENANT VARCHAR(64), TYPE VARCHAR(9), utc_create DATETIME, utc_modified DATETIME, VERSION BIGINT, version_description VARCHAR(255), PRIMARY KEY (ID))


CREATE UNIQUE INDEX idx_config_id_version_tenant_env ON ck_config (config_id, version, tenant, env)


CREATE TABLE ck_version_data_id_record (ID BIGINT AUTO_INCREMENT NOT NULL, data_id VARCHAR(255), REMOVED CHAR(1), utc_create DATETIME, utc_modified DATETIME, PRIMARY KEY (ID))


CREATE TABLE ck_versionless_config (ID BIGINT AUTO_INCREMENT NOT NULL, app_name VARCHAR(32) NOT NULL, config_id VARCHAR(255), CONTENT TEXT, DELETED VARCHAR(1), ENV VARCHAR(64), OPERATOR VARCHAR(64), STAMP VARCHAR(36), TENANT VARCHAR(64), TYPE VARCHAR(9), utc_create DATETIME, utc_modified DATETIME, PRIMARY KEY (ID))


CREATE UNIQUE INDEX idx_config_id_stamp_tenant_env ON ck_versionless_config (config_id, stamp, tenant, env)
